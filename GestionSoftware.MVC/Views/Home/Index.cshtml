@model GestionSoftware.MVC.Models.HomeViewModel

@{
    ViewData["Title"] = "Sistema de Gestión de Tareas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="features-section">
    <h2 class="section-title">¿Qué puedes hacer?</h2>
    <p class="section-subtitle">
        Funciones principales del sistema
    </p>
    
    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon projects">P</div>
            <h3>Proyectos</h3>
            <p>Crea y administra proyectos. Organiza tu trabajo por proyectos.</p>
            <a href="@Url.Action("Index", "Proyectos")" class="feature-link">Ver Proyectos</a>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon tasks">T</div>
            <h3>Tareas</h3>
            <p>Crea tareas, asígnalas y marca prioridades. Controla el progreso.</p>
            <a href="@Url.Action("Index", "Tareas")" class="feature-link">Ver Tareas</a>
        </div>
    </div>
</div>