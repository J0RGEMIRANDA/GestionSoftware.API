@model GestionSoftware.API.Models.Proyecto

@{
    ViewData["Title"] = "Crear Proyecto";
}

<div class="form-container">
    <div class="form-header">
        <h1>Crear Nuevo Proyecto</h1>
        <h4>Gestión de Proyectos</h4>
    </div>
    
    <div class="form-body">
        <form asp-action="Create">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            }
            
            <div class="form-row single">
                <div class="form-group">
                    <label asp-for="Nombre">Nombre del Proyecto</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del proyecto" />
                    <span asp-validation-for="Nombre" class="validation-error"></span>
                </div>
            </div>
            
            <div class="form-row single">
                <div class="form-group">
                    <label asp-for="Descripcion">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control textarea" placeholder="Describe los objetivos y alcance del proyecto"></textarea>
                    <span asp-validation-for="Descripcion" class="validation-error"></span>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">Crear Proyecto</button>
                <a asp-action="Index" class="btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
