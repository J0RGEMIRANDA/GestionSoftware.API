@model GestionSoftware.API.Models.Tarea

@{
    ViewData["Title"] = "Crear Tarea";
}

<div class="form-container">
    <div class="form-header">
        <h1>Crear Nueva Tarea</h1>
        <h4>Gestión de Proyectos</h4>
    </div>
    
    <div class="form-body">
        <form asp-action="Create">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            }
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Titulo">Título</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título de la tarea" />
                    <span asp-validation-for="Titulo" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="FechaVencimiento">Fecha de Vencimiento</label>
                    <input asp-for="FechaVencimiento" type="datetime-local" class="form-control" />
                    <span asp-validation-for="FechaVencimiento" class="validation-error"></span>
                </div>
            </div>
            
            <div class="form-row single">
                <div class="form-group">
                    <label asp-for="Descripcion">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control textarea" placeholder="Describe los detalles de la tarea"></textarea>
                    <span asp-validation-for="Descripcion" class="validation-error"></span>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Estado">Estado</label>
                    <select asp-for="Estado" class="form-control form-select">
                        <option value="">Seleccione un estado</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="Completada">Completada</option>
                    </select>
                    <span asp-validation-for="Estado" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Prioridad">Prioridad</label>
                    <select asp-for="Prioridad" class="form-control form-select">
                        <option value="">Seleccione una prioridad</option>
                        <option value="Baja">Baja</option>
                        <option value="Media">Media</option>
                        <option value="Alta">Alta</option>
                    </select>
                    <span asp-validation-for="Prioridad" class="validation-error"></span>
                </div>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="UsuarioId">Usuario Asignado (ID)</label>
                    <input asp-for="UsuarioId" type="number" class="form-control" placeholder="ID del usuario" />
                    <span asp-validation-for="UsuarioId" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ProyectoId">Proyecto (ID)</label>
                    <input asp-for="ProyectoId" type="number" class="form-control" placeholder="ID del proyecto" />
                    <span asp-validation-for="ProyectoId" class="validation-error"></span>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">Crear Tarea</button>
                <a asp-action="Index" class="btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
