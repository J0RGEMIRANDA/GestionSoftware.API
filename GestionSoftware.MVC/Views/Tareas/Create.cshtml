@model GestionSoftware.MVC.Models.TareaViewModel

@{
    ViewData["Title"] = "Crear Tarea";
}

<div class="form-container">
    <div class="form-header">
        <h1>Crear Nueva Tarea</h1>
        <h4>Gestión de Proyectos</h4>
    </div>
    
    <div>
        <form asp-action="Create">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            }
            
            <div>
                <div class="form-group">
                    <label asp-for="Tarea.Titulo">Título</label>
                    <input asp-for="Tarea.Titulo" class="form-control" placeholder="Ingrese el título de la tarea" />
                    <span asp-validation-for="Tarea.Titulo" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Tarea.FechaVencimiento">Fecha de Vencimiento</label>
                    <input asp-for="Tarea.FechaVencimiento" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Tarea.FechaVencimiento" class="validation-error"></span>
                </div>
            </div>
            
            <div>
                <div class="form-group">
                    <label asp-for="Tarea.Descripcion">Descripción</label>
                    <textarea asp-for="Tarea.Descripcion" class="form-control textarea" placeholder="Describe los detalles de la tarea"></textarea>
                    <span asp-validation-for="Tarea.Descripcion" class="validation-error"></span>
                </div>
            </div>
            
            <div>
                <div class="form-group">
                    <label asp-for="Tarea.Estado">Estado</label>
                    <select asp-for="Tarea.Estado" class="form-control form-select">
                        <option value="">Seleccione un estado</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="Completada">Completada</option>
                    </select>
                    <span asp-validation-for="Tarea.Estado" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Tarea.Prioridad">Prioridad</label>
                    <select asp-for="Tarea.Prioridad" class="form-control form-select">
                        <option value="">Seleccione una prioridad</option>
                        <option value="Baja">Baja</option>
                        <option value="Media">Media</option>
                        <option value="Alta">Alta</option>
                    </select>
                    <span asp-validation-for="Tarea.Prioridad" class="validation-error"></span>
                </div>
            </div>
            
            <div>
                <div class="form-group">
                    <label asp-for="UsuarioSeleccionado">Usuario Asignado</label>
                    <select asp-for="UsuarioSeleccionado" asp-items="Model.Usuarios" class="form-control form-select">
                    </select>
                    <span asp-validation-for="UsuarioSeleccionado" class="validation-error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ProyectoSeleccionado">Proyecto</label>
                    <select asp-for="ProyectoSeleccionado" asp-items="Model.Proyectos" class="form-control form-select">
                    </select>
                    <span asp-validation-for="ProyectoSeleccionado" class="validation-error"></span>
                </div>
            </div>
            
            <div>
                <button type="submit" class="btn-primary">Crear Tarea</button>
                <a asp-action="Index" class="btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
