@model IEnumerable<GestionSoftware.API.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="table-container">
    <div class="table-header">
        <h1>Lista de Usuarios</h1>
        <a asp-action="Create" class="btn-add">+ Nuevo Usuario</a>
    </div>
    
    <div class="table-body">
        @if (Model != null && Model.Any())
        {
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><strong>@item.Nombre</strong></td>
                            <td>@item.Correo</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div style="padding: 40px; text-align: center; color: #666;">
                <h3>No hay usuarios</h3>
                <p>Agrega el primer usuario al sistema.</p>
                <a asp-action="Create" class="btn-primary">Crear Usuario</a>
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 5px; margin: 20px 0; text-align: center;">
        <strong>@ViewBag.ErrorMessage</strong>
    </div>
}
