@model GestionSoftware.API.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="form-container">
    <div class="form-header">
        <h1>Nuevo Usuario</h1>
        <h4>Agregar usuario al sistema</h4>
    </div>
    
    <div class="form-body">
        <form asp-action="Create">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="ModelOnly"></div>
                </div>
            }
            
            <div class="form-group">
                <label asp-for="Nombre">Nombre Completo</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                <span asp-validation-for="Nombre" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Correo">Correo Electrónico</label>
                <input asp-for="Correo" type="email" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Correo" class="validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ContrasenaHash">Contraseña</label>
                <input asp-for="ContrasenaHash" type="password" class="form-control" placeholder="Ingrese la contraseña" />
                <span asp-validation-for="ContrasenaHash" class="validation-error"></span>
                <small style="color: #666; font-size: 0.85rem;">Mínimo 6 caracteres</small>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">Crear Usuario</button>
                <a asp-action="Index" class="btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
